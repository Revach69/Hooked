rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Events collection - require authentication for admin dashboard
    match /events/{eventId} {
      allow read: if true;
      allow write: if request.auth != null;  // Require authentication for admin operations
    }
    
    // Event profiles - allow creation and deletion without auth for event participants
    match /event_profiles/{profileId} {
      allow read: if true;
      allow create, update, delete: if true;  // Allow all operations without auth for event participants
    }
    
    // Likes - allow creation and deletion without auth for event participants
    match /likes/{likeId} {
      allow read: if true;
      allow create, update, delete: if true;  // Allow all operations without auth for event participants
    }
    
    // Messages - allow creation and deletion without auth for event participants
    match /messages/{messageId} {
      allow read: if true;
      allow create, update, delete: if true;  // Allow all operations without auth for event participants
    }
    
    // Contact shares - require authentication
    match /contact_shares/{shareId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Event feedback - require authentication
    match /event_feedback/{feedbackId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Default rule for any other collections
    match /{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
} 