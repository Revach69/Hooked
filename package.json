{
  "name": "hooked-monorepo",
  "private": true,
  "version": "1.0.0",
  "workspaces": [
    "mobile-app",
    "web-admin-hooked",
    "hooked-website",
    "web",
    "functions"
  ],
  "scripts": {
    "dev:mobile": "cd mobile-app && npm start",
    "dev:admin": "cd web-admin-hooked && npm run dev",
    "dev:website": "cd hooked-website && npm run dev",
    "dev:web": "cd web && npm run dev",
    "build:mobile": "cd mobile-app && npm run build",
    "build:admin": "cd web-admin-hooked && npm run build",
    "build:website": "cd hooked-website && npm run build",
    "build:web": "cd web && npm run build",
    "deploy:functions": "cd functions && npm run deploy",
    "install:all": "npm install && npm run install:workspaces",
    "install:workspaces": "npm install --workspace=mobile-app && npm install --workspace=web-admin-hooked && npm install --workspace=hooked-website && npm install --workspace=web && npm install --workspace=functions"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "~5.8.3"
  }
}
