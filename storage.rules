rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // ===== PROFILE PHOTOS =====
    // Allow public read access to profile photos
    match /uploads/{fileName} {
      allow read: if true;
      
      // Allow uploads for profile photos (mobile app and web version)
      // This allows session-based uploads without Firebase Auth
      allow write: if 
        // Allow image files only
        request.resource.contentType.matches('image/.*') &&
        // File size limit (10MB)
        request.resource.size < 10 * 1024 * 1024 &&
        // File name must be safe
        request.resource.name.matches('^uploads/[a-zA-Z0-9_-]+\\.[a-zA-Z0-9]+$');
    }
    
    // ===== EVENT IMAGES =====
    // Allow public read access to event images
    match /events/{fileName} {
      allow read: if true;
      
      // Allow uploads for event images (web admin dashboard)
      // This allows session-based uploads without strict Firebase Auth requirement
      allow write: if 
        // Allow image files only
        request.resource.contentType.matches('image/.*') &&
        // File size limit (5MB for event images)
        request.resource.size < 5 * 1024 * 1024 &&
        // File name must be safe and follow the pattern: events/timestamp_randomstring.extension
        request.resource.name.matches('^events/[0-9]+_[a-zA-Z0-9]+\\.[a-zA-Z0-9]+$');
    }
    
    // ===== ADMIN FILES =====
    // Allow authenticated users (admins) to manage admin files
    match /admin/{fileName} {
      allow read: if request.auth != null;
      allow write: if 
        request.auth != null &&
        // File size limit (20MB for admin files)
        request.resource.size < 20 * 1024 * 1024 &&
        // File name must be safe
        request.resource.name.matches('^admin/[a-zA-Z0-9_-]+\\.[a-zA-Z0-9]+$');
    }
    
    // ===== DEFAULT RULE =====
    // Deny all other operations by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
} 